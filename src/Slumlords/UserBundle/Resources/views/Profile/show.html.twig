{% extends 'SlumlordsBundle:Default:index.html.twig' %}



{% block body %}


<header>
  <div class="wrapper" style = "float:left" >
    <a href="#"><img src="http://grantjkidney.com/wp-content/uploads/2012/06/slumlord-e1340598131453.png" alt="Fighting Slumlords" title="Fighting Slumlords"/></a>
  </div>

</header>

<div style = "float:right; top:80px; right:45px;">
 <canvas id="graphSpace" width=410" height="380" style = "background: #D9D9F3"></canvas>
</div>


<h1> {{user.firstName}} {{user.lastName}}</h1>

<div>
<nav>
 <tr>
   <td><a href="{{ path('fos_user_profile_edit') }}" class="btn  btn-primary">Edit Profile</a></td>
   <td><a href="{{ path('fos_user_profile_edit') }}" class="btn  btn-primary">Activity</a></td>
   <td>
     <div class="btn-group">
       <a href="{{ path('slumlords_user_attendance') }}" class="btn dropdown-toggle btn-success" data-toggle="dropdown">Attendance<span class="caret"></span>
       </a>
       <ul class="dropdown-menu">
       {% for course in user.getCourses() %}
          <li>
             <a href="{{ path('slumlords_user_attendance', {'courseId':course.id}) }}">{{course.name}}</a>
          </li>
       {% endfor %}
     </div>
   </td>
 </tr>
</nav>
</div>


{% block javascripts %}

<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="http://code.highcharts.com/modules/exporting.js"></script>
<script src="{{ asset('/js/debt_money.js') }}" type="text/javascript"></script>
<script src="{{ asset('/js/debt_chart.js') }}" type="text/javascript"></script>


{% endblock %}


{% endblock %}

